<%- include('partial/header'); -%>

<div class="background p-4">
    <div class="container glass">
        <div class="row">
            <div class="col-4 p-3 profile">
                <img src="<%= profile %>" class="profile_pic">
                <h3><%= name %></h3>
                <h6><%= role %></h6>

                
                <div class="desc">
                    <ul>
                        <li><img src="/images/user.png"> 123</li>
                        <li><img src="/images/call.png"> <%= id %></li>
                    </ul>
                </div>
            </div>
            <div class="col-8">
                <div class="write-post">
                    <form action="/post" method="POST">
                        <textarea name="post" id="" cols="90" rows="3" placeholder="Write your post..."></textarea>
                        <input type="submit" class="button">
                    </form>
                </div>

                <div class="my-cards">
                    <h3>Recent Posts:</h3>
                    <div class="my-card">
                        <p>Students, prepare yourself for online class.</p>
                        <img src="/images/dp.jpg" alt="profile">
                    </div>
                    <div class="my-card">
                        <p>Sir, can you explain the chapter 5 again?</p>
                        <img src="https://cdn.pixabay.com/photo/2013/09/28/10/57/smart-187696_1280.jpg" alt="profile">
                    </div>
                    <div class="my-card">
                        <p>Complete all the questions of chapter 5 and submit before 15 Feb 2022.</p>
                        <img src="https://cdn.pixabay.com/photo/2016/03/26/20/35/young-man-1281282_1280.jpg" alt="profile">
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partial/footer'); -%>